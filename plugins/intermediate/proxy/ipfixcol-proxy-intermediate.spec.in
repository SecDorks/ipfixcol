Summary: IPFIXcol intermediate plugin for translating proxy flows.
Name: @PACKAGE_NAME@
Version: @PACKAGE_VERSION@
Release: @RELEASE@
URL: http://www.secdorks.net
Source: https://github.com/Secdorks/ipfixcol/tree/master/plugins/intermediate/proxy
License: BSD
Vendor: Secdorks.net
Packager: @USERNAME@ <@USERMAIL@>
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}

BuildRequires: gcc make doxygen pkgconfig
Requires: ipfixcol >= 0.7.1

%description
IPFIXcol intermediate plugin for translating proxy flows.

%prep
%setup

%post
ipfixconf add -c "%{_sysconfdir}/ipfixcol/internalcfg.xml" -p o -n statistics -t statistics -s "%{_datadir}/ipfixcol/plugins/ipfixcol-proxy-intermediate.so" -f

%preun

%postun
ipfixconf remove -c "%{_sysconfdir}/ipfixcol/internalcfg.xml" -p o -n proxy

%build
%configure --with-distro=@DISTRO@
make

%install
make DESTDIR=$RPM_BUILD_ROOT install

%files
#storage plugins
%{_datadir}/ipfixcol/plugins/ipfixcol-proxy-intermediate.*
%{_mandir}/man1/ipfixcol-proxy-intermediate.1.gz
